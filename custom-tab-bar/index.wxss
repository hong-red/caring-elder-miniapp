.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx; /* 增加高度 */
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 999;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.05);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-icon {
  font-size: 52rpx; /* 更大的图标 */
  margin-bottom: 4rpx;
  transition: all 0.2s;
}

.tab-icon.active {
  transform: scale(1.1);
}

.tab-text {
  font-size: 32rpx; /* 更大的文字 */
  font-weight: 600;
  color: #A0AEC0;
  transition: all 0.2s;
}

.tab-text.active {
  color: #0066FF;
  font-weight: 800;
}
