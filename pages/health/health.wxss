.scrollarea {
  flex: 1;
  overflow-y: auto;
}

.scrollarea::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.health-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-top: 0 !important; /* 覆盖 app.wxss 中的 padding-top */
  padding-bottom: 250rpx; /* 为自定义 TabBar 留出空间 */
}

/* 移除旧的自定义导航栏样式 */
.custom-nav-bar {
  display: none;
}

.nav-back {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  z-index: 1001;
}

.back-icon {
  font-size: 44rpx;
  color: var(--text-main);
  font-weight: bold;
}

.nav-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  z-index: 999;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
}

.nav-right {
  width: 60rpx;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 大字模式适配 */
.big-font .page-title { font-size: 54rpx !important; }
.big-font .page-subtitle { font-size: 32rpx !important; }
.big-font .type-label { font-size: 36rpx !important; }
.big-font .analysis-title { font-size: 40rpx !important; }
.big-font .report-text { font-size: 38rpx !important; }
.big-font .record-type { font-size: 40rpx !important; }
.big-font .record-time { font-size: 30rpx !important; }
.big-font .record-value { font-size: 48rpx !important; }
.big-font .section-title { font-size: 44rpx !important; }
.big-font .add-btn { font-size: 38rpx !important; padding: 12rpx 32rpx !important; }

/* 页面头部 */
.page-header-alt {
  padding: 0rpx 40rpx 20rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-section {
  display: flex;
  flex-direction: column;
}

.add-btn {
  box-shadow: 0 8rpx 24rpx rgba(91, 143, 249, 0.3) !important;
}

.page-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-main);
  display: block;
}

.page-subtitle {
  font-size: 24rpx;
  color: var(--text-light);
  margin-top: 8rpx;
  display: block;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  margin-top: -4rpx;
}

/* 类型选择器 */
.type-selector-section {
  background: #FFFFFF;
  padding: 20rpx 0 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.02);
}

.type-scroll {
  white-space: nowrap;
  padding: 0 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.type-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 48rpx;
  position: relative;
  padding: 10rpx 0;
  transition: all 0.3s;
}

.type-item:last-child {
  margin-right: 0;
}

.type-icon {
  width: 90rpx;
  height: 90rpx;
  background: var(--bg-color);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s;
}

.type-label {
  font-size: 26rpx;
  color: var(--text-sec);
  font-weight: 500;
  transition: all 0.3s;
}

.type-item.active .type-icon {
  background: var(--primary-light);
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(91, 143, 249, 0.2);
}

.type-item.active .type-label {
  color: var(--primary-color);
  font-weight: 700;
}

.active-dot {
  width: 10rpx;
  height: 10rpx;
  background: var(--primary-color);
  border-radius: 50%;
  position: absolute;
  bottom: -10rpx;
  opacity: 0;
  transform: scale(0);
  transition: all 0.3s;
}

.type-item.active .active-dot {
  opacity: 1;
  transform: scale(1);
}

/* 既往病史档案卡片 */
.medical-history-card {
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
}

.medical-history-card .card-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.history-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  background: #f0f7ff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.history-icon {
  font-size: 40rpx;
}

.history-info {
  flex: 1;
}

.history-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.history-badge {
  font-size: 20rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 2rpx 12rpx;
  border-radius: 10rpx;
}

.history-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 450rpx;
}

.history-desc.placeholder {
  color: #999;
}

.medical-history-card .arrow {
  color: #ccc;
  font-size: 28rpx;
}

.big-font .history-title { font-size: 40rpx !important; }
.big-font .history-desc { font-size: 32rpx !important; }
.big-font .history-icon { font-size: 50rpx !important; }
.big-font .history-badge { font-size: 28rpx !important; }

/* AI 健康分析入口 */
.ai-analysis-banner {
  margin: 0 30rpx 30rpx;
  background: linear-gradient(135deg, #f0f7ff 0%, #ffffff 100%);
  border: 2rpx solid #e1effe;
  padding: 30rpx !important;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.ai-analysis-banner::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(66, 153, 225, 0.05) 0%, transparent 70%);
  z-index: 0;
}

.ai-analysis-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.ai-analysis-info {
  flex: 1;
}

.ai-tag {
  display: inline-block;
  background: #4299E1;
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.ai-analysis-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #2c5282;
  display: block;
  margin-bottom: 8rpx;
}

.ai-analysis-desc {
  font-size: 24rpx;
  color: #4a5568;
  line-height: 1.4;
  display: block;
}

.ai-analysis-visual {
  width: 100rpx;
  height: 100rpx;
  background: #ebf8ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(66, 153, 225, 0.1);
  animation: float 3s ease-in-out infinite;
}

.ai-icon {
  font-size: 60rpx;
}

.ai-analysis-action {
  border-top: 1rpx solid rgba(66, 153, 225, 0.1);
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #4299E1;
  font-size: 26rpx;
  font-weight: 600;
  position: relative;
  z-index: 1;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* 趋势分析卡片 */
.analysis-section {
  margin: 30rpx 30rpx;
  padding: 40rpx;
  background: #FFFFFF;
  border-radius: var(--border-radius-lg);
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.title-wrap {
  display: flex;
  flex-direction: column;
}

.analysis-title {
  font-size: 34rpx;
  font-weight: 800;
  color: var(--text-main);
}

.analysis-period {
  font-size: 24rpx;
  color: var(--text-sec);
  margin-top: 8rpx;
}

.analysis-tabs {
  display: flex;
  background: var(--bg-color);
  padding: 6rpx;
  border-radius: 20rpx;
}

.ana-tab {
  padding: 10rpx 30rpx;
  font-size: 24rpx;
  color: var(--text-sec);
  border-radius: 16rpx;
  transition: all 0.3s;
}

.ana-tab.active {
  background: #FFFFFF;
  color: var(--primary-color);
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-container {
  height: 360rpx;
  margin: 40rpx 0;
  position: relative;
  display: flex;
  align-items: flex-end;
  padding-left: 60rpx;
}

.chart-bars {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-bottom: 40rpx;
}

.bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: flex-end;
}

.bar-pillar {
  width: 24rpx;
  background: linear-gradient(180deg, var(--primary-color), var(--primary-light));
  border-radius: 12rpx 12rpx 0 0;
  min-height: 10rpx;
  transition: height 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.bar-pillar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: inherit;
}

.bar-label {
  font-size: 20rpx;
  color: var(--text-sec);
  margin-top: 16rpx;
}

.chart-y-axis {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 20rpx;
  color: var(--text-light);
}

.analysis-report {
  background: var(--primary-light);
  padding: 24rpx 30rpx;
  border-radius: var(--border-radius);
  display: flex;
  align-items: flex-start;
}

.report-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.report-text {
  font-size: 24rpx;
  color: var(--text-sec);
  line-height: 1.5;
}

/* 历史记录 */
.records-section {
  padding: 0 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
}

.view-all {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-light);
}

.arrow {
  font-size: 20rpx;
  margin-left: 8rpx;
  opacity: 0.5;
}

.record-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx !important;
  margin-bottom: 20rpx !important;
}

.record-left {
  display: flex;
  align-items: center;
}

.record-icon-box {
  width: 80rpx;
  height: 80rpx;
  background: var(--bg-color);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.record-emoji {
  font-size: 36rpx;
}

.record-type {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-main);
  display: block;
}

.record-time {
  font-size: 22rpx;
  color: var(--text-light);
  margin-top: 4rpx;
  display: block;
}

.record-right {
  text-align: right;
}

.record-value-box {
  margin-bottom: 8rpx;
}

.record-value {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
}

.record-unit {
  font-size: 20rpx;
  color: var(--text-light);
  margin-left: 4rpx;
}

.status-tag {
  display: inline-block;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-tag.normal { background: rgba(82, 196, 26, 0.1); color: #52C41A; }
.status-tag.warning { background: rgba(250, 173, 20, 0.1); color: #FAAD14; }
.status-tag.danger { background: rgba(255, 77, 79, 0.1); color: #FF4D4F; }

/* 空状态 */
.empty-records {
  padding: 80rpx 40rpx !important;
  text-align: center;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
  margin-bottom: 40rpx;
}

.small-btn {
  width: 240rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}