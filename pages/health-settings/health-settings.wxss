/* 大字模式适配 */
.big-font .page-title { font-size: 54rpx !important; }
.big-font .section-title { font-size: 42rpx !important; }
.big-font .item-label { font-size: 38rpx !important; }
.big-font .item-desc { font-size: 32rpx !important; }
.big-font .btn { font-size: 40rpx !important; height: 110rpx !important; border-radius: 55rpx !important; }

.scrollarea {
  flex: 1;
  overflow-y: auto;
  height: 100vh;
}

.scrollarea::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.health-settings-container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 自定义导航栏 */
.custom-nav-bar {
  display: none;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.nav-back:active {
  background: rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
}

.nav-right {
  width: 60rpx;
}

.page-header {
  padding: 0rpx 40rpx;
  background: #FFFFFF;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
}

.content {
  padding: 0 40rpx;
}

.settings-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-normal);
}

.section-title {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: background 0.3s;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: rgba(91, 143, 249, 0.05);
}

/* 大字模式适配 */
.big-font .page-title { font-size: 54rpx !important; }
.big-font .section-title { font-size: 44rpx !important; }
.big-font .setting-label { font-size: 40rpx !important; }
.big-font .picker-value { font-size: 40rpx !important; }
.big-font .btn { font-size: 40rpx !important; height: 110rpx !important; border-radius: 55rpx !important; }
.big-font .setting-switch { transform: scale(1.3); margin-right: 20rpx; }

.setting-label {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 500;
}

.setting-switch {
  transform: scale(1.2);
}

.setting-picker {
  font-size: 28rpx;
  color: var(--text-light);
  padding: 8rpx 16rpx;
  background: var(--bg-color);
  border-radius: 16rpx;
}

.action-section {
  margin-top: 40rpx;
}

.btn {
  width: 100%;
  height: 90rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s;
  border: none;
  outline: none;
}

.btn-primary {
  background: var(--primary-color);
  color: #FFFFFF;
}

.btn-primary:hover {
  opacity: 0.9;
}

.btn-primary:active {
  transform: scale(0.98);
}
