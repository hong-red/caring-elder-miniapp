<navigation-bar title="系统设置" back="{{true}}"></navigation-bar>
<scroll-view class="scrollarea" scroll-y>
  <view class="nav-placeholder" style="height: 6rpx; display: block; box-sizing: border-box"></view>
  <view class="settings-container {{settings.bigFont ? 'big-font' : ''}}">
    <view class="page-header-alt">
      <view class="title-section">
        <text class="page-title" bindtap="readText" data-text="系统设置">系统设置</text>
        <text class="page-subtitle" bindtap="readText" data-text="个性化您的使用体验">个性化您的使用体验</text>
      </view>
    </view>
    
    <view class="settings-content">
    <!-- 无障碍设置 -->
    <view class="settings-group card">
      <view class="group-header">
        <view class="group-icon accessibility">♿</view>
        <text class="group-title">无障碍设置</text>
      </view>
      
      <view class="setting-row">
        <view class="setting-info">
          <text class="setting-label">大字模式</text>
          <text class="setting-tip">增大文字大小，适合长辈阅读</text>
        </view>
        <switch class="custom-switch" color="var(--primary-color)" bindchange="onLargeTextChange" checked="{{settings.bigFont}}" />
      </view>
      
      <view class="setting-row">
        <view class="setting-info">
          <text class="setting-label">语音功能介绍</text>
          <text class="setting-tip">开启后点击播报图标可朗读</text>
        </view>
        <switch class="custom-switch" color="var(--primary-color)" bindchange="onReadAloudChange" checked="{{settings.realtimeReading}}" />
      </view>
    </view>
    
    <!-- 健康设置 -->
    <view class="settings-group card">
      <view class="group-header">
        <view class="group-icon health">🛡️</view>
        <text class="group-title">健康提醒</text>
      </view>
      
      <view class="setting-row">
        <view class="setting-info">
          <text class="setting-label">打卡提醒</text>
          <text class="setting-tip">每日准时提醒记录健康数据</text>
        </view>
        <switch class="custom-switch" color="var(--primary-color)" bindchange="onCheckInReminderChange" checked="{{settings.checkInReminder}}" />
      </view>

      <view class="setting-row" bindtap="setPrimaryGuardian">
        <view class="setting-info">
          <text class="setting-label">首要守护人</text>
          <text class="setting-tip">设置后可快速发起呼叫</text>
        </view>
        <view class="setting-action">
          <text class="action-text">{{settings.primaryGuardian || '去设置'}}</text>
          <text class="arrow">❯</text>
        </view>
      </view>
    </view>

    <!-- 系统相关 -->
    <view class="settings-group card">
      <view class="group-header">
        <view class="group-icon system">⚙️</view>
        <text class="group-title">关于系统</text>
      </view>
      
      <view class="setting-row" bindtap="checkUpdate">
        <view class="setting-info">
          <text class="setting-label">检查更新</text>
          <text class="setting-tip">当前版本 v1.0.4</text>
        </view>
        <view class="setting-badge">最新</view>
      </view>

      <view class="setting-row" bindtap="clearCache">
        <view class="setting-info">
          <text class="setting-label">清除缓存</text>
          <text class="setting-tip">释放手机存储空间</text>
        </view>
        <text class="action-text">12.4 MB</text>
      </view>
    </view>

    <view class="logout-wrap">
      <button class="btn btn-outline-primary" bindtap="logout">退出当前账号</button>
    </view>
  </view>


</view>
</scroll-view>