.medication-edit-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  height: 100vh;
}

.scrollarea::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

/* 自定义导航栏 */
.custom-nav-bar {
  display: none;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.nav-back:active {
  background: rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
}

.nav-right {
  width: 60rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
}

.content {
  padding: 0rpx 40rpx;
}

.form-group {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-normal);
}

.section-tag {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--primary-color);
  background: rgba(91, 143, 249, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 10rpx;
  display: inline-block;
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.input-group:has(switch) {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 28rpx;
  color: var(--text-sec);
  margin-bottom: 15rpx;
  display: block;
}

.label-with-desc {
  flex: 1;
}

.label-tip {
  font-size: 24rpx;
  color: var(--text-third);
  display: block;
  margin-top: 4rpx;
}

.input-wrap {
  background: var(--bg-color);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
}

.input-field {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-main);
}

.input-placeholder {
  color: var(--text-placeholder);
}

.textarea-wrap {
  align-items: flex-start;
}

.row-textarea {
  height: 120rpx;
}

.picker-wrap {
  justify-content: space-between;
}

.arrow {
  font-size: 24rpx;
  color: var(--text-sec);
  margin-left: 10rpx;
}

.submit-section {
  margin-top: 60rpx;
  text-align: center;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 10rpx 20rpx rgba(91, 143, 249, 0.3);
}

.submit-tip {
  font-size: 24rpx;
  color: var(--text-sec);
  margin-top: 20rpx;
  display: block;
}

/* 大字模式适配 */
.big-font .page-title { font-size: 54rpx !important; }
.big-font .section-tag { font-size: 32rpx !important; padding: 10rpx 24rpx !important; }
.big-font .input-label { font-size: 36rpx !important; }
.big-font .input-field { font-size: 38rpx !important; height: 60rpx !important; }
.big-font .row-textarea { height: 180rpx !important; }
.big-font .submit-btn { height: 120rpx !important; font-size: 40rpx !important; border-radius: 60rpx !important; }
.big-font .submit-tip { font-size: 30rpx !important; }
.big-font .arrow { font-size: 32rpx !important; }