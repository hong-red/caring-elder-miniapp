.login-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  padding: 0 40rpx;
}

.scrollarea::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

/* 自定义导航栏 */
.custom-nav-bar {
  display: none;
}

/* 品牌头部 */
.login-header {
  padding: 60rpx 0 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.brand-logo {
  width: 140rpx;
  height: 140rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.05);
  margin-bottom: 24rpx;
}

.logo-emoji {
  font-size: 80rpx;
}

.brand-info {
  text-align: center;
}

.brand-name {
  font-size: 52rpx;
  font-weight: 800;
  color: var(--text-main);
  display: block;
  letter-spacing: 4rpx;
}

.brand-slogan {
  font-size: 28rpx;
  color: var(--text-sec);
  margin-top: 8rpx;
  display: block;
  opacity: 0.8;
}

/* 角色切换 */
.role-tabs {
  display: flex;
  background: rgba(0, 0, 0, 0.03);
  padding: 10rpx;
  border-radius: 24rpx;
  margin: 40rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.role-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.role-tab.active {
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.role-tab.active .role-label {
  color: var(--primary-color);
  font-weight: 600;
}

.role-icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
}

.role-label {
  font-size: 28rpx;
  color: var(--text-sec);
}

/* 表单区域 */
.form-section {
  padding: 50rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 16rpx;
  display: block;
}

.input-wrap {
  display: flex !important;
  flex-direction: row !important;
  align-items: center !important;
  background: #FFFFFF !important;
  border-radius: 20rpx;
  padding: 0 30rpx;
  height: 110rpx;
  border: 2rpx solid #EEEEEE;
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
}

.input-wrap:focus-within {
  border-color: var(--primary-color);
  box-shadow: 0 4rpx 16rpx rgba(91, 143, 249, 0.1);
}

.input-field {
  flex: 1 !important;
  height: 100% !important;
  font-size: 32rpx;
  color: var(--text-main);
  margin: 0 20rpx;
}

.field-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.password-toggle {
  padding: 20rpx;
  margin-right: -10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.toggle-icon {
  font-size: 40rpx;
  opacity: 0.6;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 40rpx;
}

.action-link {
  font-size: 24rpx;
  color: var(--text-sec);
}

.login-btn-group {
  margin-top: 40rpx;
}

.login-btn {
  width: 100% !important;
  height: 100rpx !important;
  border-radius: 50rpx !important;
  font-size: 34rpx !important;
  font-weight: 600 !important;
  margin-bottom: 24rpx !important;
}

.register-btn {
  width: 100% !important;
  height: 100rpx !important;
  border-radius: 50rpx !important;
  font-size: 34rpx !important;
  font-weight: 600 !important;
  background: transparent !important;
  color: var(--primary-color) !important;
  border: 2rpx solid var(--primary-color) !important;
}

.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.line {
  flex: 1;
  height: 1rpx;
  background: #EEEEEE;
}

.divider-text {
  font-size: 24rpx;
  color: #999;
  margin: 0 20rpx;
}

.btn-wechat {
  width: 100% !important;
  height: 100rpx !important;
  background: #07C160 !important;
  color: #FFFFFF !important;
  border-radius: 50rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  font-size: 30rpx !important;
  border: none !important;
}

.wechat-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.register-prompt {
  display: flex;
  justify-content: center;
  font-size: 26rpx;
  color: var(--text-sec);
}

.register-link {
  color: var(--primary-color);
  font-weight: 600;
  margin-left: 10rpx;
}



/* 页脚协议 */
.login-footer {
  margin-top: auto;
  padding: 40rpx 0;
  text-align: center;
}

.register-prompt {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: var(--text-sec);
}

.register-prompt .link {
  color: var(--primary-color);
  font-weight: 600;
  margin-left: 10rpx;
}

.protocol {
  font-size: 24rpx;
  color: var(--text-light);
  display: block;
}

.protocol .link {
  color: var(--primary-color);
  display: inline;
}

/* 大字模式适配 (已在 app.wxss 中全局优化) */
.big-font .role-icon {
  font-size: 60rpx !important;
}

.big-font .role-label {
  font-size: 34rpx !important;
}

.big-font .brand-name {
  font-size: 60rpx !important;
}

.big-font .brand-slogan {
  font-size: 34rpx !important;
}

.big-font .input-wrap {
  height: 130rpx !important;
}

.big-font .input-field {
  font-size: 38rpx !important;
}

.big-font .login-btn, .big-font .register-btn, .big-font .btn-wechat {
  height: 120rpx !important;
  font-size: 40rpx !important;
}

.big-font .wechat-icon {
  font-size: 44rpx !important;
}

.big-font .protocol {
  font-size: 28rpx !important;
}

.big-font .action-link {
  font-size: 32rpx !important;
}

.big-font .register-prompt {
  font-size: 34rpx !important;
}

/* 验证码弹窗 */
.verify-code-text {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--primary-color);
  background: var(--bg-color);
  padding: 10rpx 30rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
  display: inline-block;
  letter-spacing: 10rpx;
}

.big-font .verify-code-text {
  font-size: 50rpx !important;
}

@import "./login-wxa-auto-dark.wxss";
