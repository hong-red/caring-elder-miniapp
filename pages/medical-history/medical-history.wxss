.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 0 30rpx 30rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.add-btn {
  background: #1890ff;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
  margin-top: -4rpx;
}

.history-list {
  margin-bottom: 40rpx;
}

.history-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.disease-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-right: 20rpx;
}

.status-tag {
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
}

.status-tag.active {
  background: #fff1f0;
  color: #ff4d4f;
}

.status-tag.stable {
  background: #f6ffed;
  color: #52c41a;
}

.item-time, .item-note {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-top: 8rpx;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  padding: 10rpx 20rpx;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* AI 提示卡片 */
.ai-tip-card {
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f7ff 100%);
  padding: 30rpx;
  border-radius: 24rpx;
  border: 2rpx solid #bae7ff;
}

.tip-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0050b3;
}

.tip-content {
  font-size: 26rpx;
  color: #003a8c;
  line-height: 1.6;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 1000;
}

.modal-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  z-index: 1001;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.input, .picker-value {
  background: #f5f5f5;
  height: 90rpx;
  border-radius: 16rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.textarea {
  background: #f5f5f5;
  width: 100%;
  height: 160rpx;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.radio-group {
  display: flex;
}

.radio-label {
  margin-right: 40rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.submit-btn {
  background: #1890ff;
  color: #fff;
  height: 100rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
  font-size: 34rpx;
  font-weight: 600;
}

/* 大字模式 */
.big-font .title { font-size: 54rpx !important; }
.big-font .disease-name { font-size: 44rpx !important; }
.big-font .item-time, .big-font .item-note { font-size: 34rpx !important; }
.big-font .tip-content { font-size: 34rpx !important; }
.big-font .label { font-size: 36rpx !important; }
.big-font .input, .big-font .picker-value, .big-font .textarea { font-size: 36rpx !important; }