.scrollarea {
  flex: 1;
  overflow-y: auto;
  height: 100vh;
}

.scrollarea::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.edit-profile-container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 自定义导航栏 */
.custom-nav-bar {
  display: none;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.nav-back:active {
  background: rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
}

.nav-right {
  width: 60rpx;
}

.page-header {
  padding: 0rpx 40rpx;
  background: #FFFFFF;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
}

.content {
  padding: 0 40rpx;
}

.profile-form {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-normal);
}

.form-item {
  margin-bottom: 36rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 600;
  margin-bottom: 16rpx;
}

/* 大字模式适配 (已在 app.wxss 中全局优化) */
.big-font .form-item {
  margin-bottom: 50rpx;
}

.big-font .form-input, .big-font .form-picker {
  height: 120rpx !important;
  border-radius: 20rpx !important;
}

.big-font .picker-value {
  line-height: 120rpx !important;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: var(--bg-color);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-main);
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: var(--primary-color);
  outline: none;
}

.form-picker {
  width: 100%;
  height: 88rpx;
  background: var(--bg-color);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-main);
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-picker:active {
  border-color: var(--primary-color);
  background: rgba(91, 143, 249, 0.05);
}

.picker-value {
  color: var(--text-main);
}

.action-section {
  margin-top: 40rpx;
}

.btn {
  width: 100%;
  height: 90rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s;
  border: none;
  outline: none;
}

.btn-primary {
  background: var(--primary-color);
  color: #FFFFFF;
}

.btn-primary:hover {
  opacity: 0.9;
}

.btn-primary:active {
  transform: scale(0.98);
}
