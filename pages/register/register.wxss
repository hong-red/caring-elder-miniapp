.register-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  height: 100vh;
  padding: 0 40rpx;
}

.scrollarea::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

/* 自定义导航栏 */
.custom-nav-bar {
  display: none;
}

.page-header {
  padding: 60rpx 0 30rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--text-main);
  display: block;
}

.page-subtitle {
  font-size: 26rpx;
  color: var(--text-sec);
  margin-top: 12rpx;
  display: block;
}

/* 身份选择 */
.type-selector-section {
  margin-bottom: 40rpx;
}

.section-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 24rpx;
  display: block;
  padding-left: 10rpx;
}

.type-options {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  width: 100%;
}

.type-option-card {
  flex: 1;
  background: #FFFFFF;
  padding: 30rpx 20rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border: 4rpx solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
  text-align: center;
}

.type-option-card.active {
  border-color: var(--primary-color);
  background: #f0f7ff;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(91, 143, 249, 0.15);
}

.option-icon {
  font-size: 50rpx;
  margin-right: 0;
  margin-bottom: 16rpx;
  width: 90rpx;
  height: 90rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.type-option-card.active .option-icon {
  background: #FFFFFF;
  transform: scale(1.1);
}

.option-info {
  flex: 1;
}

.option-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  display: block;
}

.option-desc {
  font-size: 24rpx;
  color: var(--text-sec);
  margin-top: 4rpx;
  display: block;
}

.check-mark {
  width: 40rpx;
  height: 40rpx;
  background: var(--primary-color);
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

/* 表单卡片 */
.form-card {
  margin: 0 0 40rpx 0 !important;
  padding: 40rpx 30rpx !important;
  width: 100%;
  box-sizing: border-box;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: 16rpx;
  display: block;
  font-weight: 500;
}

.input-wrap {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 30rpx;
  height: 100rpx;
  border: 2rpx solid #edf2f7;
  transition: all 0.3s;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
}

.field-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.password-toggle {
  padding: 10rpx;
  margin-right: -10rpx;
}

.toggle-icon {
  font-size: 36rpx;
  opacity: 0.5;
}

.register-submit-btn {
  width: 100% !important;
  height: 100rpx;
  margin: 50rpx 0 30rpx !important;
  font-size: 32rpx !important;
  border-radius: 50rpx !important;
  background: linear-gradient(135deg, var(--primary-color), #4A76D4) !important;
  box-shadow: 0 10rpx 20rpx rgba(91, 143, 249, 0.3);
}

.login-prompt {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: var(--text-sec);
  margin-top: 20rpx;
}

.login-link-text {
  color: var(--primary-color);
  margin-left: 10rpx;
  font-weight: 600;
}

.page-footer {
  padding: 40rpx 0 80rpx;
  text-align: center;
}

.agreement {
  font-size: 24rpx;
  color: var(--text-light);
}

.agreement .link {
  color: var(--primary-color);
}

.big-font .code-btn {
  min-width: 240rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx !important;
  border-radius: 16rpx;
}

.login-prompt {
  display: flex;
  justify-content: center;
  font-size: 26rpx;
  color: var(--text-sec);
}

.login-link-text {
  color: var(--primary-color);
  font-weight: 600;
  margin-left: 10rpx;
}

/* 页脚 */
.page-footer {
  margin-top: auto;
  padding: 40rpx 0;
  text-align: center;
}

.agreement {
  font-size: 22rpx;
  color: var(--text-light);
}

.agreement .link {
  color: var(--primary-color);
}

/* 大字模式适配 (已在 app.wxss 中全局优化) */
.big-font .page-subtitle {
  font-size: 34rpx !important;
}

.big-font .option-title {
  font-size: 40rpx !important;
}

.big-font .option-desc {
  font-size: 30rpx !important;
}

.big-font .option-icon {
  font-size: 80rpx !important;
  width: 120rpx !important;
  height: 120rpx !important;
}

.big-font .input-wrap {
  height: 120rpx !important;
}

.big-font .input-field {
  font-size: 38rpx !important;
}

.big-font .register-submit-btn {
  height: 120rpx !important;
  font-size: 40rpx !important;
}

.big-font .login-prompt {
  font-size: 34rpx !important;
}

.big-font .agreement {
  font-size: 28rpx !important;
}