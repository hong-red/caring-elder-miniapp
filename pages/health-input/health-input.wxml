<navigation-bar title="数据录入" back="{{true}}"></navigation-bar>

<scroll-view class="scrollarea" scroll-y>
  <view class="nav-placeholder" style="height: 108rpx; display: block; box-sizing: border-box"></view>
  <view class="health-input-container {{settings.bigFont ? 'big-font' : ''}}">
    <view class="input-content">
    <view class="info-card card" style="height: 145rpx; display: flex; box-sizing: border-box">
      <view class="card-icon">📝</view>
      <view class="card-text">
        <text class="card-title">测量提醒</text>
        <text class="card-desc">建议在静息状态下进行测量，数据更准确</text>
      </view>
    </view>

    <form class="input-form">
      <view class="form-group card">
        <view class="group-header">
          <text class="group-title">基础指标</text>
        </view>
        
        <view class="input-group">
          <text class="input-label">脉搏 (次/分钟)</text>
          <view class="input-wrap">
            <input style="height: 72rpx; display: block; box-sizing: border-box" class="input-field" name="pulse" type="number" placeholder="请输入脉搏" bindinput="onPulseInput" value="{{formData.pulse}}" placeholder-class="input-placeholder" />
            <view class="input-suffix" style="width: 550rpx; height: 45rpx; display: block; box-sizing: border-box">bpm</view>
          </view>
        </view>

        <view class="input-group">
          <text class="input-label">心跳 (次/分钟)</text>
          <view class="input-wrap">
            <input style="height: 68rpx; display: block; box-sizing: border-box" class="input-field" name="heartRate" type="number" placeholder="请输入心率" bindinput="onHeartRateInput" value="{{formData.heartRate}}" placeholder-class="input-placeholder" />
            <view class="input-suffix">bpm</view>
          </view>
        </view>
      </view>

      <view class="form-group card">
        <view class="group-header">
          <text class="group-title">血压测量</text>
        </view>
        
        <view class="bp-input-grid">
          <view class="input-group bp-input-item">
            <text class="input-label">收缩压 (高压)</text>
            <view class="input-wrap">
              <input class="input-field" name="systolic" type="number" placeholder="0" bindinput="onSystolicInput" value="{{formData.systolic}}" placeholder-class="input-placeholder" />
              <text class="bp-unit">mmHg</text>
            </view>
          </view>
          
          <view class="bp-divider">
            <view class="line"></view>
          </view>

          <view class="input-group bp-input-item">
            <text class="input-label">舒张压 (低压)</text>
            <view class="input-wrap">
              <input class="input-field" name="diastolic" type="number" placeholder="0" bindinput="onDiastolicInput" value="{{formData.diastolic}}" placeholder-class="input-placeholder" />
              <text class="bp-unit">mmHg</text>
            </view>
          </view>
        </view>
      </view>

      <view class="submit-section">
        <button class="btn btn-primary submit-btn" bindtap="submitForm" hover-class="btn-hover">
          确认保存
        </button>
        <text class="time-tip">记录时间：{{currentDateStr}}</text>
      </view>
    </form>

    <!-- 参考标准 -->
    <view class="reference-card card">
      <view class="ref-header">
        <text class="ref-title">健康参考值</text>
        <view class="ref-tag">权威标准</view>
      </view>
      <view class="ref-list">
        <view class="ref-item">
          <text class="ref-name">脉搏/心率</text>
          <text class="ref-val">60 - 100 次/分</text>
        </view>
        <view class="ref-item">
          <text class="ref-name">收缩压</text>
          <text class="ref-val">90 - 140 mmHg</text>
        </view>
        <view class="ref-item">
          <text class="ref-name">舒张压</text>
          <text class="ref-val">60 - 90 mmHg</text>
        </view>
      </view>
    </view>
  </view>

  
</view>
</scroll-view>