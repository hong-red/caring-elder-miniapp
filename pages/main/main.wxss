.scrollarea {
  flex: 1;
  overflow-y: auto;
}

.scrollarea::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.main-container {
  min-height: 100vh;
  position: relative;
  background-color: var(--bg-color);
  overflow-x: hidden;
  padding-top: 0 !important; /* 覆盖 app.wxss 中的 padding-top */
  padding-bottom: 250rpx; /* 为自定义 TabBar 留出空间 */
}

/* 顶部装饰背景 */
.header-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 500rpx;
  background: linear-gradient(180deg, var(--primary-light) 0%, var(--bg-color) 100%);
  z-index: -1;
  border-bottom-left-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
}

/* 数据状态栏 */
.data-status-bar {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.dot-green {
  background: #52C41A;
  box-shadow: 0 0 10rpx rgba(82, 196, 26, 0.5);
}

.dot-red {
  background: #FAAD14;
  box-shadow: 0 0 10rpx rgba(250, 173, 20, 0.5);
  animation: pulse-orange 1.5s infinite;
}

@keyframes pulse-orange {
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.8; }
  100% { transform: scale(1); opacity: 1; }
}

.status-text {
  font-size: 24rpx;
  color: var(--text-sec);
  font-weight: 600;
  margin-right: 8rpx;
}

.source-icon {
  font-size: 28rpx;
}

/* 顶部信息区 */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 40rpx 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
  display: block;
}

.report-update-time {
  font-size: 26rpx;
  color: var(--text-light);
  margin-top: 8rpx;
  display: block;
}

.user-avatar-wrap {
