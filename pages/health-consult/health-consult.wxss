/* ==========================================================================
   健康咨询 AI 聊天页面样式
   ========================================================================== */

/* 大字模式适配 (已在 app.wxss 中全局优化) */
.big-font .main-title { font-size: 46rpx !important; }
.big-font .title-badge { font-size: 24rpx !important; }
.big-font .online-status text { font-size: 28rpx !important; }
.big-font .message-bubble { 
  font-size: 42rpx !important; 
  line-height: 1.6 !important; 
  padding: 30rpx 40rpx !important;
}
.big-font .input-field { 
  font-size: 40rpx !important; 
  height: 120rpx !important; 
  padding: 0 40rpx !important;
}
.big-font .send-btn { 
  font-size: 38rpx !important; 
  height: 110rpx !important; 
  min-width: 180rpx !important; 
}
.big-font .welcome-title { font-size: 54rpx !important; margin-bottom: 20rpx !important; }
.big-font .welcome-desc { font-size: 38rpx !important; line-height: 1.5 !important; }
.big-font .guide-item { 
  font-size: 38rpx !important; 
  padding: 30rpx !important;
  margin-bottom: 24rpx !important;
}
.big-font .recording-tip { font-size: 44rpx !important; }
.big-font .recording-time { font-size: 72rpx !important; }
.big-font .voice-btn-inner { height: 120rpx !important; border-radius: 60rpx !important; }
.big-font .switch-input-btn { font-size: 48rpx !important; padding: 20rpx !important; }

/* 导航栏标题样式 */
.header-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.main-title-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.main-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

.title-badge {
  font-size: 18rpx;
  color: #0066FF;
  background: #FFFFFF;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  font-weight: 700;
  text-transform: uppercase;
}

.online-status {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.status-dot-blink {
  width: 12rpx;
  height: 12rpx;
  background: #4CD964;
  border-radius: 50%;
  margin-right: 8rpx;
  box-shadow: 0 0 10rpx rgba(76, 217, 100, 0.5);
  animation: blink 2s infinite;
}

@keyframes blink {
  0% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.5; transform: scale(0.8); }
  100% { opacity: 1; transform: scale(1); }
}

.online-status text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* 基础容器 */
.health-consult-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8FAFC;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰背景 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #0066FF, #0052CC);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  z-index: 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 102, 255, 0.15);
}

.header-bg::after {
  content: "";
  position: absolute;
  bottom: -20rpx;
  left: 10%;
  right: 10%;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.1);
  filter: blur(20rpx);
  border-radius: 50%;
}

/* 消息列表 */
.message-list {
  flex: 1;
  width: 100%;
  position: relative;
  z-index: 1;
}

.message-wrapper {
  padding: 30rpx 30rpx 220rpx;
  display: flex;
  flex-direction: column;
}

/* 大字模式优化 */
.big-font .message-wrapper {
  padding: 30rpx 30rpx 240rpx;
}

.big-font .bottom-area {
  padding-bottom: 10rpx;
}

.big-font .input-panel-container {
  padding: 10rpx 30rpx;
}

/* 欢迎卡片 */
.welcome-section {
  margin: 20rpx 0 40rpx;
  animation: fadeInDown 0.6s ease-out;
}

@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.welcome-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 40rpx;
  border: 1rpx solid rgba(0, 102, 255, 0.05);
}

.welcome-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.bot-icon-wrap {
  width: 100rpx;
  height: 100rpx;
  background: #0066FF;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  position: relative;
  box-shadow: 0 8rpx 20rpx rgba(0, 102, 255, 0.2);
}

.bot-text-icon {
  font-size: 50rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.bot-status-ring {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 24rpx;
  height: 24rpx;
  background: #4CD964;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.welcome-title-box {
  display: flex;
  flex-direction: column;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.welcome-subtitle {
  font-size: 24rpx;
  color: #8E8E93;
  margin-top: 4rpx;
}

.welcome-body {
  border-top: 1rpx solid #F2F2F7;
  padding-top: 30rpx;
}

.welcome-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.guide-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.guide-item {
  background: #F8FAFC;
  padding: 24rpx 30rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.2s;
  border: 1rpx solid transparent;
}

.guide-item:active {
  background: #F0F7FF;
  border-color: rgba(0, 102, 255, 0.1);
  transform: translateX(10rpx);
}

.guide-arrow {
  color: #AEAEB2;
  font-size: 24rpx;
  font-family: monospace;
}

.guide-dot {
  color: #0066FF;
  font-weight: bold;
  margin-right: 12rpx;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 40rpx;
  width: 100%;
}

.ai-item { justify-content: flex-start; }
.user-item { justify-content: flex-end; }

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.ai-avatar {
  background: #0066FF;
  color: #FFFFFF;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 102, 255, 0.2);
}

.user-avatar {
  background: #E5E5EA;
  color: #666;
  margin-left: 20rpx;
}

.message-content {
  max-width: 75%;
  display: flex;
  flex-direction: column;
}

.user-item .message-content { align-items: flex-end; }

.message-bubble {
  padding: 24rpx 32rpx;
  border-radius: 30rpx;
  font-size: 32rpx;
  line-height: 1.5;
  word-wrap: break-word;
  position: relative;
}

.ai-item .message-bubble {
  background: #FFFFFF;
  color: #1A1A1A;
  border-top-left-radius: 4rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.user-item .message-bubble {
  background: #0066FF;
  color: #FFFFFF;
  border-top-right-radius: 4rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 102, 255, 0.2);
}

.message-time {
  font-size: 20rpx;
  color: #AEAEB2;
  margin-top: 8rpx;
}

/* 思考中 */
.ai-thinking {
  display: flex;
  margin-bottom: 40rpx;
  animation: fadeIn 0.3s;
}

.thinking-bubble {
  background: #FFFFFF;
  padding: 20rpx 30rpx;
  border-radius: 30rpx;
  border-top-left-radius: 4rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.thinking-text {
  font-size: 24rpx;
  color: #8E8E93;
  margin-left: 12rpx;
}

/* 底部操作区 */
.bottom-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.08);
}

.quick-questions-panel {
  padding: 10rpx 0 5rpx;
}

.quick-header {
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.quick-title {
  font-size: 24rpx;
  color: #8E8E93;
  font-weight: 600;
  margin-right: 12rpx;
}

.quick-line {
  flex: 1;
  height: 1rpx;
  background: #F2F2F7;
}

.quick-questions {
  white-space: nowrap;
  padding: 0 20rpx;
}

.quick-question-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: #F0F7FF;
  border-radius: 40rpx;
  margin: 0 8rpx;
  border: 1rpx solid rgba(0, 102, 255, 0.1);
}

.quick-text {
  font-size: 26rpx;
  color: #0066FF;
}

/* 健康总结条 */
.health-summary-bar {
  margin: 0 30rpx 10rpx;
  background: #F8FAFC;
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 102, 255, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
}

.health-summary-bar.compact {
  height: auto;
  min-height: 80rpx;
}

.summary-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  cursor: pointer;
}

.summary-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.summary-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.toggle-icon {
  font-size: 24rpx;
  color: #8E8E93;
  margin-left: 12rpx;
}

.health-data-grid {
  display: flex;
  padding: 0 24rpx 20rpx;
  gap: 20rpx;
}

.data-card {
  flex: 1;
  background: #FFFFFF;
  padding: 16rpx;
  border-radius: 16rpx;
  text-align: center;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.data-label {
  display: block;
  font-size: 24rpx;
  color: #8E8E93;
  margin-bottom: 8rpx;
}

.data-val {
  font-size: 32rpx;
  font-weight: 700;
  color: #0066FF;
}

.data-unit {
  font-size: 24rpx;
  color: #8E8E93;
  margin-left: 4rpx;
}

/* 输入面板 */
.input-panel-container {
  padding: 15rpx 30rpx 20rpx;
}

.input-panel {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.mode-switch-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.input-content-wrap {
  flex: 1;
}

.input-field {
  background: #F2F2F7;
  height: 88rpx;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
}

.voice-press-btn {
  background: #FFFFFF;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  border: 1rpx solid #E5E5EA;
  transition: all 0.2s;
}

.voice-press-btn.active {
  background: #E5E5EA;
  transform: scale(0.98);
}

.send-btn {
  width: 120rpx !important;
  height: 88rpx;
  background: #0066FF;
  color: #FFFFFF;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  padding: 0;
  margin: 0 !important;
}

.send-btn:not(.active) {
  opacity: 0.5;
}

/* 录音遮罩升级 */
.recording-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(5px);
}

.recording-card {
  background: rgba(255, 255, 255, 0.95);
  width: 400rpx;
  height: 400rpx;
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
}

.voice-waves {
  height: 100rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 40rpx;
}

.wave {
  width: 8rpx;
  background: #0066FF;
  border-radius: 4rpx;
  animation: wave 1s ease-in-out infinite;
}

.wave1 { height: 30rpx; animation-delay: 0.1s; }
.wave2 { height: 60rpx; animation-delay: 0.2s; }
.wave3 { height: 80rpx; animation-delay: 0.3s; }
.wave4 { height: 60rpx; animation-delay: 0.4s; }
.wave5 { height: 30rpx; animation-delay: 0.5s; }

@keyframes wave {
  0%, 100% { transform: scaleY(1); }
  50% { transform: scaleY(1.5); }
}

.recording-tip {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 600;
}

.recording-time {
  font-size: 48rpx;
  color: #0066FF;
  font-weight: 800;
  margin: 10rpx 0;
}

.release-tip {
  font-size: 24rpx;
  color: #8E8E93;
}
