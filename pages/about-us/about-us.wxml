          <view class="feature-item">
              <text class="feature-icon">📞</text>
              <view class="feature-info">
                <text class="feature-name" bindtap="readText" data-text="一键呼叫">一键呼叫</text>
                <text class="feature-desc" bindtap="readText" data-text="长按快速联系家人，同步位置与动态">长按快速联系家人，同步位置与动态</text>
              </view>
            </view>
          <view class="feature-item">
            <text class="feature-icon">❤️</text>
            <view class="feature-detail">
              <text class="feature-name" bindtap="readText" data-text="健康管理">健康管理</text>
              <text class="feature-desc" bindtap="readText" data-text="记录心率、血压，异常情况自动预警">记录心率、血压，异常情况自动预警</text>
            </view>
          </view>
          <view class="feature-item">
            <text class="feature-icon">👨‍👩‍👧‍👦</text>
            <view class="feature-detail">
              <text class="feature-name" bindtap="readText" data-text="亲情绑定">亲情绑定</text>
              <text class="feature-desc" bindtap="readText" data-text="多端数据同步，家属随时掌握健康动态">多端数据同步，家属随时掌握健康动态</text>
