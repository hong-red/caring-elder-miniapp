            </view>
          </view>
        </view>
      </view>
      
      <view class="contact-section">
        <text class="content-title" bindtap="readText" data-text="联系我们">联系我们</text>
        <view class="contact-item">
          <text class="contact-label" bindtap="readText" data-text="联系邮箱：">联系邮箱：</text>
          <text class="contact-value" bindtap="makePhoneCall">1850425474@qq.com</text>
        </view>
        <view class="contact-item">
          <text class="contact-label" bindtap="readText" data-text="地址：">地址：</text>
          <text class="contact-value" bindtap="readText" data-text="北京市印刷学院">北京市印刷学院</text>
