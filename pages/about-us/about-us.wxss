.scrollarea {
  flex: 1;
  overflow-y: auto;
  height: 100vh;
}

.scrollarea::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 自定义导航栏 */
.custom-nav-bar {
  display: none;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
}

.nav-right {
  width: 60rpx;
}

/* 大字模式适配 */
.big-font .page-title { font-size: 54rpx !important; }
.big-font .app-name { font-size: 60rpx !important; }
.big-font .app-slogan { font-size: 40rpx !important; }
.big-font .app-version { font-size: 32rpx !important; }
.big-font .content-title { font-size: 46rpx !important; }
.big-font .content-text { font-size: 38rpx !important; line-height: 1.6 !important; }
.big-font .feature-text { font-size: 38rpx !important; }
.big-font .feature-icon { font-size: 44rpx !important; }
.big-font .contact-label { font-size: 36rpx !important; }
.big-font .contact-value { font-size: 36rpx !important; }
.big-font .agreement-item { font-size: 34rpx !important; }

.about-us-container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

.content {
  padding: 0rpx 40rpx 0;
}

.about-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: var(--shadow-normal);
}

.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-normal);
}

.logo-emoji {
  font-size: 80rpx;
}

.app-meta {
  text-align: center;
}

.app-name {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--text-main);
  display: block;
  margin-bottom: 8rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: var(--text-sec);
  display: block;
  margin-bottom: 16rpx;
}

.app-version {
  font-size: 22rpx;
  color: var(--text-light);
  display: block;
}

.about-content {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.content-title {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--text-main);
  display: block;
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 26rpx;
  color: var(--text-sec);
  line-height: 1.6;
  display: block;
  margin-bottom: 24rpx;
}

.feature-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  background: var(--bg-light);
  padding: 20rpx;
  border-radius: 16rpx;
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 12rpx;
}

.feature-detail {
  display: flex;
  flex-direction: column;
}

.feature-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
}

.feature-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 大字模式适配 */
.big-font .feature-name { font-size: 40rpx !important; }
.big-font .feature-desc { font-size: 32rpx !important; }
.big-font .feature-icon { font-size: 48rpx !important; width: 80rpx !important; height: 80rpx !important; }

.contact-section {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  font-size: 26rpx;
  color: var(--text-sec);
  margin-right: 20rpx;
  width: 120rpx;
}

.contact-value {
  font-size: 26rpx;
  color: var(--text-main);
  font-weight: 500;
  flex: 1;
}

.agreement-section {
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
}

.agreement-item {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
}
