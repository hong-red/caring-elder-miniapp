.scrollarea {
  flex: 1;
  overflow-y: auto;
}

.scrollarea::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.family-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-top: 0 !important; /* 覆盖 app.wxss 中的 padding-top */
  padding-bottom: 250rpx; /* 为自定义 TabBar 留出空间 */
}

/* 移除旧的自定义导航栏样式 */
.custom-nav-bar {
  display: none;
}

.nav-left, .nav-right {
  width: 100rpx;
}

.nav-right {
  display: flex;
  justify-content: flex-end;
}

.nav-title {
  flex: 1;
  text-align: center;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
}

.nav-action {
  width: 60rpx;
  height: 60rpx;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plus-icon {
  font-size: 40rpx;
  color: #FFFFFF;
  margin-top: -4rpx;
}

/* 大字模式适配 */
.big-font .page-title { font-size: 54rpx !important; }
.big-font .page-subtitle { font-size: 32rpx !important; }
.big-font .stats-val { font-size: 50rpx !important; }
.big-font .stats-label { font-size: 30rpx !important; }
.big-font .section-title { font-size: 42rpx !important; }
.big-font .member-name { font-size: 44rpx !important; }
.big-font .relation-badge { font-size: 28rpx !important; padding: 4rpx 12rpx !important; }
.big-font .activity-text, .big-font .check-text { font-size: 30rpx !important; }
.big-font .empty-title { font-size: 42rpx !important; }
.big-font .empty-desc { font-size: 34rpx !important; }
.big-font .benefit-item { font-size: 32rpx !important; }
.big-font .bind-btn { font-size: 40rpx !important; padding: 24rpx 48rpx !important; }
.big-font .test-text { font-size: 32rpx !important; }

/* 顶部栏 */
.page-header-alt {
  padding: 0rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.page-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-main);
  display: block;
}

.page-subtitle {
  font-size: 24rpx;
  color: var(--text-sec);
  margin-top: 8rpx;
  display: block;
}

.btn-icon {
  font-size: 44rpx;
  color: #FFFFFF;
  font-weight: bold;
}

/* 统计概览样式优化 */
.stats-overview {
  margin: 0 40rpx 40rpx;
  padding: 30rpx !important;
  background: #FFFFFF !important;
}

.stats-grid {
  display: flex;
  align-items: center;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-val {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--primary-color);
  display: block;
}

.stats-label {
  font-size: 22rpx;
  color: var(--text-sec);
  margin-top: 8rpx;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background: var(--border-color);
}

/* 内容区域 */
.content-section {
  padding: 0 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24rpx;
  padding-left: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
}

/* 紧急通知样式 */
.emergency-alerts {
  margin-bottom: 40rpx;
}



.alert-title {
  color: #ff4d4f !important;
}

.clear-btn {
  font-size: 24rpx;
  color: var(--text-sec);
  text-decoration: underline;
}

.alert-card {
  border-left: 8rpx solid #ff4d4f !important;
  padding: 30rpx !important;
  margin-bottom: 24rpx !important;
  background: #fff1f0 !important;
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.alert-user {
  font-size: 32rpx;
  font-weight: 700;
  color: #cf1322;
}

.alert-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.alert-status.pending {
  background: #ffccc7;
  color: #cf1322;
}

.alert-status.processed {
  background: #f0f0f0;
  color: var(--text-sec);
}

.alert-body {
  margin-bottom: 20rpx;
}

.alert-health {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.health-tag {
  font-size: 24rpx;
  color: #cf1322;
  background: #fff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ffccc7;
}

.alert-footer {
  display: flex;
  gap: 20rpx;
}

.alert-time {
  font-size: 24rpx;
  color: var(--text-sec);
  display: block;
}

.alert-loc {
  font-size: 26rpx;
  color: #cf1322;
  font-weight: 500;
  margin-top: 8rpx;
  display: block;
}

.alert-footer {
  display: flex;
  gap: 20rpx;
}

.btn-mini {
  padding: 10rpx 24rpx !important;
  font-size: 24rpx !important;
  min-height: 0 !important;
  width: auto !important;
  margin: 0 !important;
}

.btn-danger {
  background: #ff4d4f !important;
  color: #fff !important;
}

.section-count {
  font-size: 22rpx;
  color: var(--text-light);
}

.family-item {
  margin-bottom: 24rpx !important;
  padding: 24rpx 30rpx !important;
}

.item-main {
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  background: var(--bg-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-emoji {
  font-size: 50rpx;
}

.status-indicator {
  position: absolute;
  right: 4rpx;
  bottom: 4rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
}

.check-text {
  font-size: 22rpx;
  color: var(--primary-color);
  margin-top: 4rpx;
  display: block;
  font-weight: 500;
}

/* 悬浮操作按钮 (FAB) */
.fab-container {
  position: fixed;
  right: 40rpx;
  bottom: 280rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 99;
}

.fab-btn {
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #0066FF 0%, #0052CC 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 102, 255, 0.4);
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.fab-btn:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 12rpx rgba(0, 102, 255, 0.3);
}

.fab-icon {
  font-size: 60rpx;
  color: #FFFFFF;
  font-weight: 300;
}

.fab-label {
  font-size: 22rpx;
  color: var(--primary-color);
  font-weight: 600;
  background: rgba(255, 255, 255, 0.9);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 大字模式适配 FAB */
.big-font .fab-btn {
  width: 140rpx;
  height: 140rpx;
}
.big-font .fab-icon {
  font-size: 80rpx;
}
.big-font .fab-label {
  font-size: 30rpx;
  padding: 8rpx 24rpx;
}

/* 空状态增强 */
.empty-illustration {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.benefit-list {
  margin: 30rpx 0 40rpx;
  text-align: left;
  display: inline-block;
}

.benefit-item {
  font-size: 26rpx;
  color: var(--text-sec);
  margin-bottom: 12rpx;
  display: block;
}

.bind-btn {
  width: 400rpx !important;
  height: 90rpx !important;
  font-size: 32rpx !important;
  border-radius: 45rpx !important;
}

.status-indicator.online {
  background: var(--success-color);
}

.status-indicator.offline {
  background: #D9D9D9;
}

.member-info {
  flex: 1;
}

.name-line {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-right: 12rpx;
}

.relation-badge {
  font-size: 20rpx;
  color: var(--primary-color);
  background: var(--primary-light);
  padding: 2rpx 12rpx;
  border-radius: 6rpx;
}

.activity-line {
  display: flex;
  align-items: center;
}

.activity-text {
  font-size: 24rpx;
  color: var(--text-sec);
}

.item-action {
  display: flex;
  align-items: center;
}

.msg-dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--danger-color);
  border-radius: 50%;
  margin-right: 16rpx;
}

.arrow-icon {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 空状态 */
.empty-family {
  padding: 80rpx 40rpx !important;
  text-align: center;
}

.empty-illustration {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  display: block;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-sec);
  line-height: 1.6;
  display: block;
  margin-bottom: 40rpx;
}

.bind-btn {
  width: 320rpx !important;
}

/* 动态卡片 */
.dynamic-card {
  padding: 30rpx !important;
}

.dynamic-item {
  display: flex;
  align-items: center;
}

.dynamic-dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--primary-color);
  border-radius: 50%;
  margin-right: 20rpx;
}

.dynamic-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-sec);
}

.highlight {
  color: var(--text-main);
  font-weight: 600;
}

.dynamic-time {
  font-size: 22rpx;
  color: var(--text-light);
}