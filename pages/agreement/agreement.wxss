/* 用户协议页面样式 */
.agreement-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.agreement-content {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.agreement-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin: 32rpx 0 16rpx 0;
  line-height: 1.4;
}

.section-content {
  margin-bottom: 24rpx;
}

.content-item {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 12rpx;
}

.list-item {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
  margin-left: 40rpx;
  margin-bottom: 12rpx;
  position: relative;
}

.list-item::before {
  content: "•";
  color: #0066ff;
  font-size: 32rpx;
  position: absolute;
  left: -24rpx;
  top: 0;
  line-height: 1.8;
}

.bold {
  font-weight: bold;
  color: #333;
}

.contact-info {
  margin-top: 40rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 8rpx solid #0066ff;
}

.contact-info text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

/* 大字模式适配 */
.big-font .agreement-title {
  font-size: 44rpx;
}

.big-font .section-title {
  font-size: 40rpx;
}

.big-font .section-content {
  font-size: 36rpx;
  line-height: 2;
}

.big-font .contact-info text {
  font-size: 32rpx;
}

/* 滚动区域样式 */
.scrollarea {
  flex: 1;
  height: calc(100vh - var(--status-bar-height) - 44px);
}

/* 导航栏占位符 */
.nav-placeholder {
  width: 100%;
}