/**app.wxss**/
page {
  /* ... 原有变量保持不变 ... */
  --primary-color: #5B8FF9;
  --primary-light: #F0F5FF;
  --secondary-color: #61DDAA;
  --accent-color: #F6BD16;
  --success-color: #52C41A;
  --warning-color: #FAAD14;
  --danger-color: #FF4D4F;
  
  --bg-color: #F7F8FA;
  --card-bg: #FFFFFF;
  --text-main: #262626;
  --text-sec: #595959;
  --text-light: #8C8C8C;
  --border-color: #F0F0F0;
  
  --border-radius-sm: 16rpx;
  --border-radius: 24rpx;
  --border-radius-lg: 40rpx;
  
  --shadow-subtle: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  --shadow-normal: 0 8rpx 24rpx rgba(91, 143, 249, 0.08);
  --shadow-heavy: 0 16rpx 48rpx rgba(91, 143, 249, 0.12);
  
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  color: var(--text-main);
  font-size: 28rpx;
  line-height: 1.6;
  
  /* 关键修复：解决滚动区域高度问题 */
  min-height: 100vh;
  --line-height-big: 1.8;
}

.scrollarea {
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 大字模式全局覆盖 */
.big-font {
  font-size: 38rpx !important;
  line-height: var(--line-height-big) !important;
}

.big-font .page-title {
  font-size: 52rpx !important;
  line-height: 1.4 !important;
}

.big-font .section-title {
  font-size: 44rpx !important;
  margin-bottom: 30rpx !important;
}

.big-font .setting-label,
.big-font .info-label,
.big-font .info-value,
.big-font .btn,
.big-font text,
.big-font input,
.big-font textarea {
  font-size: 38rpx !important;
}

.big-font .info-item {
  padding: 36rpx 0 !important;
}

.big-font .card {
  padding: 40rpx !important;
  margin-bottom: 40rpx !important;
}

.big-font .btn {
  height: 110rpx !important;
  border-radius: 55rpx !important;
}

.big-font .setting-desc {
  font-size: 30rpx !important;
  margin-top: 10rpx !important;
}

/* 通用卡片样式 */
.card {
  background: var(--card-bg);
  border-radius: var(--border-radius);
  padding: 32rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: var(--shadow-normal);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.card:active {
  transform: scale(0.99);
  box-shadow: var(--shadow-subtle);
  opacity: 0.95;
}

/* 按钮基础样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  border: none;
  padding: 0 40rpx;
}

.btn-circle {
  width: 90rpx !important;
  height: 90rpx !important;
  padding: 0 !important;
  border-radius: 50% !important;
  min-width: 90rpx !important;
  min-height: 90rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  flex-shrink: 0 !important;
  line-height: 1 !important;
}

.btn-circle::after {
  border: none !important;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), #7DA8FF);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(91, 143, 249, 0.2);
}

.btn-secondary {
  background: var(--primary-light);
  color: var(--primary-color);
}

.btn-danger {
  background: #FFF1F0;
  color: var(--danger-color);
}

.btn-sm {
  height: 70rpx !important;
  font-size: 26rpx !important;
  padding: 0 32rpx !important;
  min-height: 70rpx !important;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.96);
}

/* 自定义导航栏通用样式 */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 180rpx;
  padding-top: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.nav-back {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.back-icon {
  font-size: 40rpx;
  color: var(--text-main);
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
}

.nav-right {
  width: 80rpx;
}

/* 容器内边距适配导航栏 */
.container, .main-container, .health-container, .profile-container, .logs-container, .medication-container,
.health-input-container, .family-container, .bind-family-container, .family-detail-container, .about-us-container,
.notification-settings-container, .health-settings-container, .edit-profile-container, .personal-info-container,
.check-in-container, .settings-container, .medication-edit-container {
  padding-top: 0;
  padding-bottom: 250rpx; /* 统一增加底部间距，确保内容不被 TabBar 遮挡 */
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面内容通用外边距 */
.content {
  padding-bottom: 40rpx;
  flex: 1;
}

.footer-spacer {
  height: 120rpx;
  width: 100%;
}

/* 悬浮朗读按钮 */
/* 悬浮朗读按钮增强样式 */
.float-read-area {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 9999;
}

.float-read-btn {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(110, 142, 251, 0.4);
  pointer-events: auto;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(8px);
}

.float-read-btn:active {
  transform: scale(0.9) rotate(-10deg);
  box-shadow: 0 4rpx 12rpx rgba(110, 142, 251, 0.3);
  transition: all 0.2s ease;
}

/* 呼吸灯效果 */
.float-read-btn::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(110, 142, 251, 0.5);
  animation: pulse-border 2s infinite;
  pointer-events: none;
}

@keyframes pulse-border {
  0% { transform: scale(1); opacity: 0.8; }
  100% { transform: scale(1.4); opacity: 0; }
}

/* 大字模式下调整悬浮按钮大小 */
.big-font .float-read-btn {
  width: 120rpx;
  height: 120rpx;
}

.read-icon {
  font-size: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.1));
}

.read-ripple {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #6e8efb;
  opacity: 0.25;
  animation: ripple 2.5s infinite ease-out;
}

@keyframes ripple {
  0% { transform: scale(1); opacity: 0.4; }
  100% { transform: scale(1.6); opacity: 0; }
}

/* 辅助布局类 */
.flex-row { display: flex; align-items: center; }
.flex-between { display: flex; justify-content: space-between; align-items: center; }
.flex-center { display: flex; justify-content: center; align-items: center; }
.mt-20 { margin-top: 20rpx; }
.mb-20 { margin-bottom: 20rpx; }
