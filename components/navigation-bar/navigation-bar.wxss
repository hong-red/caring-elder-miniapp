  margin-left: 0;
  animation: loading linear infinite 1s;
}

@keyframes loading {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}

.weui-navigation-bar__right {
  position: relative;
  padding-right: var(--left);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  height: 100%;
  box-sizing: border-box;
}

.voice-intro-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  background: rgba(0, 102, 255, 0.1);
  border-radius: 50%;
  margin-right: 12px;
  transition: all 0.3s ease;
  border: 1px solid rgba(0, 102, 255, 0.2);
}

.voice-icon {
  font-size: 18px;
  line-height: 1;
}

.weui-active {
  transform: scale(0.9);
  background: rgba(0, 102, 255, 0.2);
}

